{
  "manifest_version": 3,
  "name": "Auto Content Fetcher",
  "version": "1.0",
  "description": "Automatically fetches page content and sends it to OpenAI.",
  "permissions": ["activeTab", "scripting", "storage"],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://www.google.com/"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
